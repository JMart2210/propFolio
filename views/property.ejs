<%- include('partials/header') -%>
<div class="container">
  <h1>property.ejs</h1>
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= property.address %></h2>
      <img class="img-fluid" src="<%= property.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/property/likeProperty/<%= property.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= property.likes %></h3>
        <%if(property.user == user.id){ %>
        <form
          action="/property/deleteProperty/<%=property.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= property.caption %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>
<div class="mt-5">
  <h2>Comments</h2>
  <div class="row justify-content-center mt-5">
    <ul class="row list-unstyled">
      <% for(var i=0; i<comments.length; i++) {%>
        <li>
          <strong><%= comments[i].userName %>:</strong> <%= comments[i].comment %>
        </li>
      <% } %>
      </ul>
  </div>
  <form action="/comment/createComment/<%= property.id %>" method="POST">
    <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea class="form-control" id="comment" name="comment"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
  </form>
</div>

<%- include('partials/footer') -%>
